# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///cognitive_persuasion.db
# For PostgreSQL: postgresql://username:password@hostname:port/database_name

# AI API Keys (Required for real AI functionality - will use mock data if not provided)
OPENAI_API_KEY=your-openai-api-key-here
PERPLEXITY_API_KEY=your-perplexity-api-key-here
CLAUDE_API_KEY=your-claude-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# PayPal Configuration (Required for real payment processing - will use mock data if not provided)
PAYPAL_CLIENT_ID=your-paypal-client-id-here
PAYPAL_CLIENT_SECRET=your-paypal-client-secret-here
PAYPAL_MODE=sandbox
# Change to 'live' for production

# CORS Configuration (Frontend URLs that can access this API)
CORS_ORIGINS=*
# For production, specify exact domains: https://visitorintel.site,https://www.visitorintel.site

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=86400

# Application Configuration
APP_NAME=Cognitive Persuasion Engine API
APP_VERSION=2.0.0
DEBUG=false

# Rate Limiting (requests per minute per IP)
RATE_LIMIT=100

# Email Configuration (Optional - for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Custom Domain Configuration
FRONTEND_URL=https://visitorintel.site
BACKEND_URL=https://api.visitorintel.site

# Optional: Additional API Keys for Future Features
TAVUS_API_KEY=your-tavus-api-key-for-video-generation
STRIPE_API_KEY=your-stripe-api-key-alternative-payment

# Demo Mode Configuration
DEMO_USER_EMAIL=demo@example.com
ENABLE_DEMO_MODE=true

# API Rate Limits (per user per hour)
OPENAI_RATE_LIMIT=1000
PERPLEXITY_RATE_LIMIT=500
CLAUDE_RATE_LIMIT=500
GEMINI_RATE_LIMIT=1000

