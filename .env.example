# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///app.db
# For PostgreSQL: postgresql://username:password@hostname:port/database_name

# AI API Keys (Required for AI functionality)
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_API_KEY=your-google-gemini-api-key-here
CLAUDE_API_KEY=your-claude-api-key-here
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# PayPal Configuration (Required for payment processing)
PAYPAL_CLIENT_ID=your-paypal-client-id-here
PAYPAL_CLIENT_SECRET=your-paypal-client-secret-here
PAYPAL_MODE=sandbox
# Change to 'live' for production

# CORS Configuration (Frontend URLs that can access this API)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.vercel.app

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# Application Configuration
APP_NAME=Cognitive Persuasion Engine API
APP_VERSION=1.0.0
DEBUG=false

# Rate Limiting (requests per minute per IP)
RATE_LIMIT=100

# Email Configuration (Optional - for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

